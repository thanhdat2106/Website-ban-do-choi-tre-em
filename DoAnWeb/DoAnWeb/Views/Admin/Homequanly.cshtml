@{
    ViewBag.Title = "Homequanly";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<script src="~/Content/js/Chart.min.js"></script>
<div class="row">
    <div class="col-lg-2" style="background-color:#f53e3e; border-radius:10%;margin-left:40px;margin-right:5% ">
    <p style="border-bottom:2px solid #000; color:white; text-align:center; font-size:1.2em; font-weight:400">Số khách hàng</p>
    <div style="height:50px">
    @Html.Action("SoKH","Admin")
    </div>
    </div>
    <div class="col-lg-2" style="background-color:#e3df25; border-radius:10%;margin-right:5%">
    <p style="border-bottom:2px solid #000; color:white; text-align:center; font-size:1.2em; font-weight:400">Số nhân viên</p>
    <div style="height:50px">
        @Html.Action("SoNV","Admin")
    </div>
    </div>
    <div class="col-lg-2" style="background-color:#7cdb57; border-radius:10%;margin-right:5% ">
    <p style="border-bottom:2px solid #000; color:white; text-align:center; font-size:1.2em; font-weight:400">Số HD hôm nay</p>
    <div style="height:50px">
    @Html.Action("SoHD","Admin")
    </div>
    </div>
    <div class="col-lg-2" style="background-color:#5e8cf4; border-radius:10%;margin-right:5% ">
    <p style="border-bottom:2px solid #000; color:white; text-align:center; font-size:1.2em; font-weight:400">TT trong tháng</p>
    <div style="height:50px">
    @Html.Action("TT","Admin")
    </div>
    </div>
</div>
<div>
    <canvas id="myChart" height="300" width="600"></canvas>
    <script>
        var myChart = document.getElementById('myChart').getContext('2d');

        // Global Options
        Chart.defaults.global.defaultFontFamily = 'Lato';
        Chart.defaults.global.defaultFontSize = 18;
        Chart.defaults.global.defaultFontColor = '#777';

        var massPopChart = new Chart(myChart, {
            type:'bar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
            data:{
                labels:['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6','Tháng 7','Tháng 8','Tháng 9','Tháng 10','Tháng 11','Tháng 12'],
                datasets:[{
                    //label: 'Tháng 1',                    
                    //label: 'Tháng 3',
                    //label: 'Tháng 4',
                    //label: 'Tháng 5',
                    //label: 'Tháng 6',
                    //label: 'Tháng 7',
                    //label: 'Tháng 8',
                    //label: 'Tháng 9',
                    //label: 'Tháng 10',
                    //label: 'Tháng 11',
                    //label: 'Tháng 12',
                    data:[
                      @ViewBag.thang1,
                      
                      @ViewBag.thang2,
                      @ViewBag.thang3,
                      @ViewBag.thang4,
                      @ViewBag.thang5,
                      @ViewBag.thang6,
                      @ViewBag.thang7,
                      @ViewBag.thang8,
                      @ViewBag.thang9,
                      @ViewBag.thang10,
                      @ViewBag.thang11,
                      @ViewBag.thang12,
                    ],
                    //backgroundColor:'green',
                    backgroundColor:[
                      'rgba(255, 99, 132, 0.6)',
                      'rgba(54, 162, 235, 0.6)',
                      'rgba(255, 206, 86, 0.6)',
                      'rgba(75, 192, 192, 0.6)',
                      'rgba(153, 102, 255, 0.6)',
                      'rgba(255, 159, 64, 0.6)',
                      'rgba(255, 99, 23, 0.6)',
                      'rgba(255, 99, 43, 0.6)',
                      'rgba(255, 99, 175, 0.6)',
                      'rgba(255, 99, 156, 0.6)',
                      'rgba(255, 99, 128, 0.6)',
                      'rgba(255, 99, 143, 0.6)',
                    ],
                    borderWidth:1,
                    borderColor:'#777',
                    hoverBorderWidth:3,
                    hoverBorderColor:'#000'
                }]
            },
            options:{
                title:{
                    display:true,
                    text:'Biều đồ doanh thu qua từng tháng trong năm 2019',
                    fontSize: 25,
                    
                },
                legend:{
                    display:false,
                    position:'right',
                    labels:{
                        fontColor:'#000'
                    }
                },
                layout:{
                    padding:{
                        left:50,
                        right:0,
                        bottom:0,
                        top:0
                    }
                },
                tooltips:{
                    enabled:true
                }
            }
        });
    </script>
</div>
